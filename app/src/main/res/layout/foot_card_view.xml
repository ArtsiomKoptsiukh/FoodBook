<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="6dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/foot_card_view"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/cardBackground"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="16dp">


            <ImageView
                android:id="@+id/foot_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_gavai"/>

            <LinearLayout
                android:layout_toRightOf="@+id/foot_image"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/foot_image"
                    android:text="testName"
                    android:textColor="#000000"
                    android:textSize="24sp"/>

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/foot_name"
                    android:layout_toRightOf="@+id/foot_image"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вес : "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/foot_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="testWeight"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llName"
                    android:layout_toRightOf="@+id/foot_image"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Цена : "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/foot_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TestPrice"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>